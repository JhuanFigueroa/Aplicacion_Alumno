<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F1010"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gradient">
                <Button
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/left"
                    android:onClick="irMenu"/>

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="32dp"
                    android:text="DESCARGA TU HORARIO"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratalternates_bold"/>

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/Title"
                    android:src="@drawable/tesji_logo" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_height="130dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="-70dp"
                app:cardElevation="10dp">
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:text="INSTRUCCIONES"
                    android:textColor="#778E8B"
                    android:fontFamily="@font/montserratalternates_bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="45dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textColor="#8E9F9D"
                    android:fontFamily="@font/montserratalternates_bold"
                    android:text="En este apartado podra descargar de forma rapida su horario proporcionado por su jefe de diviciÃ³n"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="310dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="25dp"
                    android:text="Tipo de Constancia"
                    android:fontFamily="@font/montserratalternates_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/videoView"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/hor"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="110dp"
                    android:fontFamily="@font/montserratalternates_bold"
                    android:text="DESCARGAR"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:text="Finalizar"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratalternates_bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="20dp"
                    android:textSize="14dp"
                    android:onClick="irMenu"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>